def decimal_octal(dec):
    decimal = int(dec)
  

    print(decimal, " en Octal : ", oct(decimal))

def decimal_hexa(dec):
    decimal = int(dec)
  

    print(decimal, " en Hexadecimal : ", hex(decimal))